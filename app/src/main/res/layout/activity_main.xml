<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.appp.MainActivity">


    <ImageView
        android:id="@+id/showing_image"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/hk"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/Hong_Kong_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life In Hong Kong"
        android:textAllCaps="true"
        android:textSize="40sp"
        android:textColor="#E23F6D"
        android:textStyle="bold|italic"
        android:textAlignment="gravity"
        android:layout_centerVertical="false"/>

    <TextView
        android:id="@+id/showing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to HK!"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:textSize="60sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"

       />
    <Button
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button1"
        android:text="1"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext1"/>
    <Button
        android:layout_marginLeft="76dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button2"
        android:text="2"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext2"/>
    <Button
        android:layout_marginLeft="136dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button3"
        android:text="3"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext3"/>
    <Button
        android:layout_marginLeft="196dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button4"
        android:text="4"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext4"/>
    <Button
        android:layout_marginLeft="256dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button5"
        android:text="5"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext5"/>
    <Button
        android:layout_marginLeft="316dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/button6"
        android:text="6"
        android:layout_alignParentBottom="true"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:width="120dip"
        android:background="#7fffffff"
        android:onClick="showNext6"/>
</RelativeLayout>

